<script>
  const setPasswordButton = document.getElementById('togglepasswordView');
  const passwordfeild = document.getElementById('password');
  setPasswordButton.addEventListener('click', ()=>{
    // console.log("clicked ðŸ”‘")
    const type = passwordfeild.getAttribute('type') === 'password' ? 'text' : 'password'
    passwordfeild.setAttribute("type", type)

    setPasswordButton.innerHTML = type === 'text' ? '<i class="fa-solid fa-eye-slash"></i>' : '<i class="fa-solid fa-eye"></i>'

  })
</script>